package com.m2i.hello;

import java.io.IOException;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class TodoListServlet
 */
@WebServlet("/TodoListServlet/*")
public class TodoListServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public TodoListServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	
		
		response.setHeader("Content-Type", "text/html");
		response.setCharacterEncoding("UTF-8");
		
		//response.getWriter().append("<br> URL: " + request.getRequestURI());
		//response.getWriter().append("<br> PathInfo: " + request.getPathInfo());
		String pathInfo = request.getPathInfo();
		if(pathInfo == null) {
			// ToDo pas de numéro de todolist passé
		} else {
			if(pathInfo.substring(1).matches("\\d+")) {
					int id = Integer.parseInt(pathInfo.substring(1));
					// TODO html de la todolist
					TodoListRepository repo = new TodoListRepository();
					ArrayList<Todo> todoList = repo.findTodoListById(id);
					
					if(todoList == null) {
						//TODO gérer le fait que l'id ne
						// correspondent à aucune liste
					}
			} else {
				response.getWriter().append("<ul>");
				
				for (Todo todo : todoList) {
					response.getWriter().append("<li>" + todo.getTitle() + "</li>");
				}
			
		     }
			response.getWriter().append("</ul>");
		
	
		}
		
		
		// TODO Auto-generated method stub
		//response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
